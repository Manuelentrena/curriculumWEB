{% extends "layout.twig" %}

{% block content %}
  
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <h1 class="display-4 my-5 ml-4">CurriculumWEB</h1>
        <div class="card card-signin my-4">
          <div class="card-body">
            <h5 class="card-title text-center">Accede</h5>
            <form action="auth" method="POST" enctype = "multipart/form-data" class="form-signin">
              <div class="form-label-group">
                <label for="email"></label>
                <input class="form-control" type="text" name="email" value="{{ dataForm['email'] }}" placeholder="Correo electrónico" required autofocus>
              </div>
              <div class="form-label-group">
                <label for="password"></label>
                <input class="form-control" type="password" name="password" placeholder="Contraseña" value="{{ dataForm['password'] }}">
              </div>
              <div class="col d-flex justify-content-between align-items-center">
                <div class="custom-control custom-checkbox my-3">
                  <input type="checkbox" class="custom-control-input" id="customCheck1">
                  <label class="custom-control-label" for="customCheck1">Recordar Contraseña</label>
                </div>
                <div>
                  <a href="join" class="">¿No tienes cuenta? Únete!</a>
                </div>
              </div>
              <button class="btn btn-lg btn-info btn-block text-uppercase" type="submit">Entrar</button>
            </form>
            <div class="alert alert-{{ classMensaje }} mt-3 mb-0" role="alert">
              {% for note in mensaje %}
                {{ note | raw }} <br>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock content %}